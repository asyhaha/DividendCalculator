<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- App Logo -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_logo"
            android:contentDescription="App Logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Dividend Estimator"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="24dp" />

        <!-- Input Fields -->
        <EditText
            android:id="@+id/investAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Invested Fund Amount"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/dividendRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Annual Dividend Rate (%)"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/monthsInvested"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Months (Max 12)"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Calculate Button -->
        <Button
            android:id="@+id/calculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#1A237E"
            android:backgroundTint="#B3E5FC"
            android:layout_marginBottom="12dp" />

        <!-- Clear Button -->
        <Button
            android:id="@+id/clearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#1A237E"
            android:backgroundTint="#81D4FA"
            android:layout_marginBottom="24dp" />

        <!-- Result -->
        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />

        <!-- About Button -->
        <Button
            android:id="@+id/aboutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="16sp"
            android:textColor="#1A237E"
            android:backgroundTint="#4FC3F7"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
